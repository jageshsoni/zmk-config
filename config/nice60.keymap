#include <dt-bindings/zmk/keys.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>


/ {

    macros {
        bt_clr_macro: bt_clr_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_CLR>;
        };
        bt_nxt_macro: bt_nxt_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_NXT>;
        };
        hello_macro: hello_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp F>, <&kp U>, <&kp C>, <&kp K>, <&kp SPACE>, <&kp Y>, <&kp O>, <&kp U>;
        };
        tap_dance_macro: tap_dance_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&td_bt_actions>;
        };
    };

    behaviors {
        td_bt_actions: td_bt_actions {
            compatible = "zmk,behavior-tap-dance";
            tapping-term-ms = <300>;
            #binding-cells = <0>;
            bindings = <&kp ENTER>, <&kp F>, <&kp U>;
        };
        ht_td_or_hello: ht_td_or_hello {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";   // Fixes tap/hold preference
            tapping-term-ms = <300>;  // Reduce time to register tap
            #binding-cells = <2>;
            bindings = <&td_bt_actions>, <&hello_macro>; // TAP first, then HOLD
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &ht_td_or_hello 0 0
                &bt BT_CLR
            >;
        };
    };
};